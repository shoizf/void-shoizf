# Credits: adapted from Kaushallrai's hyprlock (https://github.com/Kaushallrai/hyprlock.git)


# Lock after 5 minutes
listener {
timeout = 300
on-timeout = hyprlock
}


# Screen off after 8 minutes
listener {
timeout = 480
on-timeout = __SCREEN_OFF_CMD__
on-resume = __SCREEN_ON_CMD__
}


# System suspend after 15 minutes
listener {
timeout = 900
on-timeout = __SUSPEND_CMD__
}
